<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Inverted triangle -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="170%"
            android:pivotY="1%">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp" />
                <solid android:color="#FCB931" />
            </shape>
        </rotate>
    </item>
</layer-list>
